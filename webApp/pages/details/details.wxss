.body {
  background-color: #f5f5f5;
}

.detailsHeader {
  background-color: white;
  height: 8rem;
  padding: 1rem;
  display: flex;
}

.detailsHeader image {
  width: 5.4rem;
  height: 100%;
}

.detailsHeader text {
  display: block;
}

.clickBtn {
  display: flex;
  justify-content: space-around;
  background-color: white;
  padding: 0.4rem 0rem;
  border-bottom: 0.01rem solid #d5d5d5;
}

button {
  display: inline-block;
  width: 9rem;
  height: 2rem;
  line-height: 2rem;
  background-color: silver;
  color: white;
}
.scrollBox{
  width:50rem;
  height: 100%;
  overflow-x: scroll;
}
.scrollBox .img{
  width:7.7rem;
  float: left;
  margin-right: 0.6rem;
}
.lodeDetailsDate {
  margin-left: 0.6rem;
  font-size: 0.8rem;
  color: #5e5e5e;
}
.section{
  margin-bottom: 4rem;
}

.introduction {
  height: 5.4rem;
  line-height: 1.2rem;
  overflow: hidden;
  font-size: 0.8rem;
  margin-top: 0.6rem;
  padding: 0.6rem;
  background-color: white;
  border-top: 0.01rem solid #d5d5d5;
  border-bottom: 0.01rem solid #d5d5d5;
}
video_photo,
.allBoxOffice,
.movieActors {
  padding: 0rem 0.6rem;
  margin-top: 0.6rem;
  background-color: white;
  border-top: 0.01rem solid #d5d5d5;
  border-bottom: 0.01rem solid #d5d5d5;
}

.actorsDate {
  display: flex;
  justify-content: space-between;
  height: 7rem;
}

.actorsDate image {
  width: 4rem;
  height: 5rem;
}

.actorsDate text {
  display: block;
  font-size: 0.7rem;
}
.movieVideo,
.movieboxOffice,
.allActors {
  font-size: 0.8rem;
  line-height: 1.8rem;
  display: block;
}
.payMovie{
  background-color: #ef4339;
  color: white;
  width: 100%;
  border-radius: 0;
  position: fixed;
  bottom: 0;
  height: 3rem;
  line-height: 3rem;
  font-size: 1rem;
  font-weight: bold;
}


.boxOffice {
  display: flex;
  justify-content: space-around;
  text-align: center;
}

.boxOffice text {
  display: block;
}
.boxOffice>view>text:nth-child(1){
  color: #ef4339;
  font-size: 0.9rem;
  font-weight: bold;
}
.boxOffice>view>text:nth-child(2){
  color: #999;
  font-size: 0.7rem;
  line-height: 1.6rem;
}
.video_photo{
  height: 5rem;
  padding: 1rem 0;
  margin-bottom: 3.4rem;
}
.video_photo image{
  width: 6.1rem;
  height: 5rem;
  margin: 0rem 0.2rem;
}
.video_photo image:nth-of-type(1){
  width: 7.6rem;
}